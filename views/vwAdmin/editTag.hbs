<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white d-flex justify-content-between">
                    <h4><span><i class="fa fa-pencil" aria-hidden="true"></i></span> Chỉnh sửa nhãn</h4>
                </div>
                <div class="card-body">
                    <form id="frmEditTag" method="POST" >
                        <div class="form-group">
                            <label for="id"> <strong>ID</strong> </label>
                            <input type="text" readonly class="form-control" id="id" name="id"
                                value="{{tagDetail.id}}">
                        </div>
                        
                            <div class=" form-group">
                                <label for="tag_name"><strong>Tên nhãn</strong></label>
                                <input type="text" class="form-control" id="tag_name" name="tag_name"
                                    value="{{tagDetail.tag_name}}" autofocus>
                            </div>
        
                            

                        <div class="mt-3">

                            <a class="btn btn-primary" href="/admin/tags/" role="button">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                Quay lại
                            </a>
                                               
                            <button type="submit" class="btn btn-danger" formaction="/admin/tags/del">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Xoá
                            </button>
                            
                            <button type="submit" class="btn btn-success" formaction="/admin/tags/patch">
                                <i class="fa fa-check" aria-hidden="true"></i>
                                Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>