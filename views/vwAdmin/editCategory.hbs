<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white d-flex justify-content-between">
                    <h4><span><i class="fa fa-pencil" aria-hidden="true"></i></span> Chỉnh sửa chuyên mục</h4>
                </div>
                <div class="card-body">
                    <form id="frmEditCat" method="POST" >
                        <div class="form-group">
                            <label for="id"> <strong>ID</strong> </label>
                            <input type="text" readonly class="form-control" id="id" name="id"
                                value="{{categoryDetail.id}}">
                        </div>
                        <div class="row">
                            <div class="col-8 form-group">
                                <label for="title"><strong>Tên chuyên mục</strong></label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="{{categoryDetail.title}}" autofocus>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="parent_title"><strong>Chuyên mục cha</strong></label>
                                    <input type="text" readonly class="form-control" id="parent_title"
                                        name="parent_title" value="{{categoryDetail.parent_title}}">
                                </div>
                            </div>
                            

                        </div>
                        <div class="mt-3">

                            <a class="btn btn-primary" href="/admin/categories/" role="button">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                Quay lại
                            </a>
                            {{#if isNotParent}}                    
                            <button type="submit" class="btn btn-danger" formaction="/admin/categories/del">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Xoá
                            </button>
                            {{/if}}
                            <button type="submit" class="btn btn-success" formaction="/admin/categories/patch">
                                <i class="fa fa-check" aria-hidden="true"></i>
                                Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>